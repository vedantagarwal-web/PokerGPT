# Flask settings
FLASK_APP=src/web/app.py
FLASK_ENV=development
FLASK_DEBUG=1

# Database settings
DATABASE_URL=sqlite:///data/pokergpt.db

# Model settings
MODEL_PATH=data/models
LANGUAGE_MODEL=bert-base-uncased

# API settings
API_KEY=your_api_key_here

# Cache settings
